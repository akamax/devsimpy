# -*- coding: Latin-1 -*-

# First set the path where PyPDEVS can be found
import sys

#sys.path.append("/home/yentl/UA/DEVS/src/")
import os.path
sys.path.append(os.path.expanduser('../src/'))

# And import the simulator
from simulator import *

# Only required if model is Â²not in current directory
#sys.path.append("path/of/model")

# Import the root model
from model_trifusion_sans_fusion import ModeleTriFusion

# Make an instance of it
my_model = ModeleTriFusion()

# Instantiate a simulator with it
sim = Simulator(my_model)

# Perform all configurations on the instantiated simulator
# For a list of all possible options, see the documentation

#sim.setVerbose(None)
sim.setTerminationTime(10.0)

# Call simulate() to perform the simulation
# This will block until simulation is complete (both local and distributed)
sim.simulate()
